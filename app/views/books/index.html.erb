<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    
<% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td> 
            <td><%= book.body %></td>
            <td><%= link_to "Show" , "" %></td>
            <td><%= link_to "Edit" , "" %></td>
            <td><a href="#">Destroy</a></td>
        </tr>
    </tbody>
<% end %>
</table>
 
 <%= form_with model: @book, url: "/books", method: :post do |f| %>
 <h2>New book</h2>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>
 
 <%= f.submit "Create Book" %>
 
 <% end %>
 